<Window x:Class="ComPortUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComPortUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <!-- Define two equal columns with a split in the middle -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Input Section -->
        <Label x:Name="Input_Label" 
               Content="Input" 
               Grid.Column="0"
               HorizontalAlignment="Left" 
               VerticalAlignment="Top"
               Margin="10,43,0,0" RenderTransformOrigin="0.598,1.632" FontSize="18"/>
        <TextBox x:Name="Input_TB" 
                 Grid.Column="0"
                 TextWrapping="Wrap" 
                 Margin="10,77,10,10"
                 KeyDown="Input_TB_KeyDown" FontSize="18" FontFamily="Consolas"/>
        <Button x:Name="LoadFileButton" Grid.Column="0" Content="Load File" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="18" Click="LoadFileButton_Click"/>
        <CheckBox x:Name="ConvertStringToBin"  Content="Convert String to Binary" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="100,12,0,0" FontSize="18"/>
        <!-- Output Section -->
        <Label x:Name="Outpu_Label" 
               Content="Output" 
               Grid.Column="1"
               HorizontalAlignment="Left" 
               VerticalAlignment="Top"
               Margin="10,43,0,0" RenderTransformOrigin="0.554,0.175" FontSize="18"/>
        <TextBox x:Name="Output_TB" 
                 Grid.Column="1"
                 TextWrapping="Wrap" 
                 Focusable="True"
                 Margin="10,77,10,10" FontSize="18" FontFamily="Consolas"/>
        <ComboBox x:Name="OutputFormat_CB" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="120" FontSize="18" SelectionChanged="OutputFormat_CB_SelectionChanged">
            <ComboBoxItem IsSelected="True">ASCII</ComboBoxItem>
            <ComboBoxItem>Hex</ComboBoxItem>
        </ComboBox>
        <Button x:Name="ClearOutput_Btn" Grid.Column="1" Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="145,10,0,0" Width="70" FontSize="18" Click="ClearOutput_Btn_Click"/>



    </Grid>
</Window>